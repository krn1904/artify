# Copy this file to `.env.local` for local development
# On Vercel, add these in Project Settings â†’ Environment Variables

# MongoDB connection string
# Example (MongoDB Atlas): mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority
MONGODB_URI="mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority"

# NextAuth secret for signing JWTs (use a strong random string)
# Generate locally: openssl rand -base64 32
NEXTAUTH_SECRET="replace-with-a-strong-random-string"

# Base URL of the app
# Local dev:
NEXTAUTH_URL="http://localhost:3000"
# On Vercel, set to your deployed URL, e.g. https://artify-yourname.vercel.app
